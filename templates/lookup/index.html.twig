{% extends 'base.html.twig' %}

{% block title %}Hello LookupController!
{% endblock %}

{% block body %}
	<h1>Resultats de la recherche</h1>
	<h3 class="my-4">Produits correspondant a la recherche pour vous:
		</h3>
		<div>
			{% for product in products %}
				<div class="row">
			<div class="col-md-4 mb-4">
				<div class="card mb-3" style="max-width: 540px;">
					<div class="row g-0">
						<div class="col-md-4">
							<img src="{{ product.picture }}" class="img-fluid rounded-start" alt="{{ product.name }}">
						</div>
						<div class="col-md-8">
							<div class="card-body">
								<h5 class="card-title">{{ product.name }}</h5>
								<p class="card-text">{{ product.description }}</p>
								<p class="card-text">
									<small class="text-body-secondary">Prix:
										{{ product.price }}
										€</small>
								</p>
								<a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-primary">Voir Article</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
			{% else %}
				<tr>
					<td colspan="6">Aucun articles trouvés</td>
				</tr>
			{% endfor %}
		</div>
	{% endblock %}
