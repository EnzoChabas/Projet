{% extends 'base.html.twig' %}

{% block title %}My-Shop : panier{% endblock %}

{% block body %}

<div class="container mt-4">
    <h1>Votre panier</h1>

    {% if items is empty %}
    <p><b>Votre panier est vide !!</b></p>
    {% else %}
    <a href="{{ path('cart_clear') }}" onclick="return confirm('Etes-vous sure de vouloir vider tout le panier ?');" class="btn btn-warning mb-2">
        <i class="bi-trash-fill me-1"></i> Vider le panier
    </a>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Titre</th>
                <th scope="col">Dimension</th>
                <th scope="col">Prix (‚Ç¨)</th>
                <th scope="col">Quantit√©</th>
                <th scope="col">Total</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
            <tr>
                <th scope="row">{{ item.product.id }}</th>
                <td>{{ item.product.name }}</td>
                <td>{{ item.product.dimensions.name }}</td>
                <td>{{ item.product.price|number_format(2,',',' ') }} ‚Ç¨</td>
                <td>{{ item.quantity }}</td>
                <td>{{ (item.product.price * item.quantity)|number_format(2,',',' ') }} ‚Ç¨</td>
                <td>
                    <a class="btn btn-danger flex-shrink-0" onclick="return confirm('Suppimer cet √©l√©ment du panier ?');" href="{{ path('cart_delete', {id: item.product.id})}}">
                        üóëÔ∏è
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4" class="text-right">TOTAL</td>
                <td>{{ totalQuantity }}</td>
                <td>{{ total|number_format(2,',',' ') }} ‚Ç¨</td>
                <td>
                    <form action="/checkout" method="post">
                        <button class="btn btn-primary" type="submit">PAYER</button>
                    </form>
                </td>
            </tr>
        </tfoot>
    </table>
    {% endif %}
</div>
{% endblock %}